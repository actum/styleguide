{
  "name": "styleguide",
  "version": "0.1.0",
  "description": "Styleguide generator",
  "scripts": {
    "kss": "kss-node --config kss-config.json",
    "kss-clone": "kss-node --clone"
  },
  "author": "Jan Panschab <jan.panschab@gmail.com>",
  "license": "MIT",
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "browser": true,
      "node": true,
      "jquery": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "ecmaFeatures": {
        "jsx": true
      },
      "sourceType": "module"
    },
    "rules": {
      "semi": 2,
      "quotes": [
        2,
        "single"
      ],
      "strict": [
        2,
        "never"
      ],
      "keyword-spacing": 2,
      "one-var": [
        2,
        "never"
      ],
      "no-empty": 2,
      "space-in-parens": [
        2,
        "never"
      ],
      "space-before-function-paren": [
        2,
        "never"
      ],
      "no-spaced-func": 2,
      "no-multiple-empty-lines": [
        2,
        {
          "max": 1
        }
      ],
      "linebreak-style": [
        2,
        "unix"
      ]
    }
  },
  "dependencies": {
    "glob": "^7.0.3",
    "handlebars": "^4.0.5",
    "kss": "^2.4.0",
    "marked": "^0.3.5",
    "wrench": "^1.5.9"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-core": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "browser-sync": "^2.11.2",
    "browserify": "^13.0.0",
    "copy-paste": "^1.1.4",
    "css-reset-and-normalize": "^0.3.0",
    "cssnano": "^3.5.2",
    "del": "^2.2.0",
    "envify": "^3.4.0",
    "gulp": "^3.9.1",
    "gulp-css-globbing": "^0.1.8",
    "gulp-eslint": "^2.0.0",
    "gulp-if": "^2.0.0",
    "gulp-less": "^3.0.5",
    "gulp-plumber": "^1.1.0",
    "gulp-postcss": "^6.1.0",
    "gulp-rename": "^1.2.2",
    "gulp-sourcemaps": "^1.6.0",
    "gulp-svgmin": "^1.2.2",
    "gulp-svgstore": "^6.0.0",
    "gulp-uglify": "^1.5.3",
    "gulp-util": "^3.0.7",
    "merge-stream": "^1.0.0",
    "require-dir": "^0.3.0",
    "run-sequence": "^1.1.5",
    "stream-combiner2": "^1.1.1",
    "uglifyify": "^3.0.1",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.7.0",
    "yargs": "^4.3.2"
  }
}
